{% extends ('base.html.twig') %}

{% block body %}
<div class="container">
    {{ form_start(form) }}

        {{ form_label(form.nom) }}
        {{ form_errors(form.nom) }}
        {{ form_widget(form.nom) }}

        {{ form_label(form.duree) }}
        {{ form_errors(form.duree) }}
        {{ form_widget(form.duree) }}

        {{ form_label(form.difficulte) }}
        {{ form_errors(form.difficulte) }}
        {{ form_widget(form.difficulte) }}

        {{ form_label(form.description) }}
        {{ form_errors(form.description) }}
        {{ form_widget(form.description) }}

    <div class="form-control mt-4">
    Liste des ingredients:
    
        {% for ingredient in form.ingredient %}
            <div class="form-check mt-2">
                {{ form_widget(ingredient) }}
                <label class="form-check-label" for="{{ ingredient.vars.id }}">
                    {{ ingredient.vars.label }}
                </label>
                </div>
        {% endfor %}
            {{ form_errors(form.ingredient) }}
                </div>
            </div>
    <div class="d-flex justify-content-center">
        {{ form_row(form.submit) }}
    </div>
    
{{ form_end(form) }}
</div>
{% endblock %}